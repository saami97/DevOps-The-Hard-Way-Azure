name: Spell Check

on:
  push:
    branches: [**]
  pull_request:
    branches: [**]

jobs:
  spell-check:
    runs-on: ubuntu-latest

    steps:
    - name: Checkout repository
      uses: actions/checkout@v2

    - name: Install codespell
      run: sudo apt-get install -y codespell

    - name: Run codespell
      run: codespell --ignore-words-list="fo,fofo,fofofo" "**/*.md"
